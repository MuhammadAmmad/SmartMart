<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_selector"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/img_shop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/img_shop"
        android:text="苏果超市"
        android:textColor="#242424"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/img_quan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_quan" />

    <LinearLayout
        android:id="@+id/ll_sall"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/img_shop"
        android:orientation="horizontal">

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/commentRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:isIndicator="true"
            android:rating="4" />

        <TextView
            android:id="@+id/tv_sall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="月销量120笔"
            android:textColor="#b0b0b0"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_below="@+id/ll_sall"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/img_shop"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="40分钟送达"
            android:textColor="#b0b0b0"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="#b0b0b0" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="5.5km"
            android:textColor="#b0b0b0"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_price"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/ll_time"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/img_shop"
        android:background="@drawable/black_round_edit"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_startMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="¥100 起送"
            android:textColor="@color/themeColor"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/themeColor" />

        <TextView
            android:id="@+id/tv_sendMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="¥10 配送费"
            android:textColor="@color/themeColor"
            android:textSize="13sp" />
    </LinearLayout>

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@+id/img_shop"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/img_shop"
        android:background="@color/divider_color" />

</RelativeLayout>