<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_selector"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_order_msg"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="订单消息"
            android:textColor="#001d54"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_order_msg_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/s"
            android:background="@drawable/ic_new_msg"
            android:gravity="center"
            android:text="1"
            android:textColor="#fff"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_detail_jian" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color" />

    <RelativeLayout
        android:id="@+id/ll_fee"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/layout_selector"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_fee_msg"
            android:drawablePadding="15dp"
            android:gravity="center_vertical"
            android:text="缴费提醒"
            android:textColor="#001d54"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_fee_msg_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/ss"
            android:background="@drawable/ic_new_msg"
            android:gravity="center"
            android:text="1"
            android:textColor="#fff"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_detail_jian" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color" />
</LinearLayout>