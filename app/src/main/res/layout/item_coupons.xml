<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="4dp"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal"
        app:cardElevation="3dp"
        card_view:cardBackgroundColor="#00000000"
        card_view:cardCornerRadius="0dp">

        <FrameLayout
            android:id="@+id/f1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/bg_coupons" />

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="10元"
                        android:textColor="@color/price_color"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_use"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_price"
                        android:layout_marginTop="3dp"
                        android:text="满25可用"
                        android:textColor="@color/textblackColor"
                        android:textSize="13sp" />
                </RelativeLayout>

                <View
                    android:id="@+id/v"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@+id/r2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/v"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店铺优惠券"
                        android:textColor="@color/textblackColor"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_usedfor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="仅限156****8424用户使用"
                        android:textColor="#727272"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="有效期至2016.09.30前"
                        android:textColor="#727272"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>